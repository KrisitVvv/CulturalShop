
.body {
	width: 100%;
	height: 100%;
	background-color: #007AFF;
}
.layout_top {
	width: 100%;
	height: 145px;
	display: flex;
	flex-direction: column;
	margin: 0 0 0 10px;
}
.container {
	margin: auto;
	width: 100%;
	display: flex;
	flex-direction: row;
	background-color: #e7e7e7;
	border-radius: 15px 15px 0 0;
}
.colum {
	border-radius: 14px;
	margin: 5px;
	display: flex;
	flex-direction: column;
	flex: 1;
	padding: 0 2px;
}
.item {
	background-color: white;
	border-radius: 14px;
	margin-bottom: 8px;
	display: flex;
	flex-direction: column;
	width: 100%;
}
.item-image {
	width: 100%;
	object-fit: cover;
	border-radius: 14px 14px 0 0;
	margin-bottom:5px ;
}
.search_bar {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	background-color: white;
	height: 40px;
	width: 96%;
	border-radius: 7px;
	margin: 10px 0;
	align-items: center;
}

